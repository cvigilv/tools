# SCRIPT HISTORY
_version_="0.0"
_released_="Currently in development"
_title_="setBG - Set my background boy! $_version_"

feh --bg-fill --randomize $HOME/.wallpapers/* && \
    notify-send "setBG" "Changed wallpaper!"
